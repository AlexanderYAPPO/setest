#ifndef XQTSCONFIG_H
#define XQTSCONFIG_H

#include <string>

struct XQTSConfig {
  static const std::string configFile;
  
  static const std::string queryBaseDir;
  static const std::string answerBaseDir;
  static const std::string dataBaseDir;
};

std::string XQTSConfig::configFile = "XQTSCatalog.xml";
std::string XQTSConfig::queryBaseDir = "Queries/XQuery/";
std::string XQTSConfig::answerBaseDir = "ExpectedTestResults/";
std::string XQTSConfig::dataBaseDir = "TestSources/";

#endif // XQTSCONFIG_H